@using BlogProject.Services
@using Microsoft.AspNetCore.Identity;

@inject IImageService ImageService
@inject UserManager<BlogUser> userManager


@model BlogProject.Models.Post

@{
    ViewData["Title"] = "Details";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Post Content-->

<article>
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            @Html.Raw(Model.Content)
        </div>
    </div>
</article>


<hr />

<article>
    <div class="row">
        <div class="col text-center font-weight-bold h3">
            Tags
        </div>
    </div>

    <div class="row">
        <div class="col text-center">
            @foreach (var tag in Model.Tags)
            {
                <a class="btn btn-success btn-sm" asp-action="TagIndex" asp-route-tag="@tag.Text">#@tag.Text.ToUpper()</a>
            }
        </div>
    </div>
</article>

<hr />

<!-- Write comments-->
<div>
    @if (User.Identity.IsAuthenticated)
    {
        <form asp-action="Create" asp-controller="Comments" method="post">
            @Html.Hidden("PostId", Model.Id)
            <div class="row">
                <div class="form-group">
                    <label class="h2 control-label font-weight-bold">Add Comment</label>
                </div>
            </div>
            <div class="row mb-2">
                <textarea name="body" class="from-control" rows="5"></textarea>
            </div>


            <button type="submit" class="btn btn-dark w-100 btn-sm mb-2">Submit</button>

        </form>

    }
    else
    {
        <a class="btn w-100 btn-sm btn-dark" asp-area="Identity" asp-page="/Account/Login">
            Login to add comments
        </a>
    }
</div>

<!-- Display Comments-->

<hr />



<section style="background-color:#202529;">


    <div class="container my-5 py-3">
        <div class="d-flex justify-content-center">
            <span id="commentSection" class="text-light mb-3">@Model.Comments.Count COMMENT(S)</span>
        </div>


        <div class="card rounded">
            <div class="card-body p-4">
                @{
                    var n = 0;

                    foreach (var comment in Model.Comments)
                    {
                     


                        <div class="d-flex flex-start mt-3">
                            <div class="flex-shrink-0">
                                <img class="rounded-circle me-3" style="width:70px;" src="@ImageService.DecodeImage(comment.BlogUser.ImageData, comment.BlogUser.ContentType)" />
                            </div>

                            <div>
                                <h5 class="fw-bold mb-1">@comment.BlogUser.FullName</h5>
                                <div class="d-flex align-items-center">
                                    <small><i> @comment.Created.ToString("MMM dd, yyyy") </i></small>
                                </div>
                                <p class="">@comment.Body</p>                       
                            </div>

                        </div>
                        @if (comment.Moderated is null && comment.Deleted is null && comment.BlogUserId == userManager.GetUserId(User))
                        {
                            
                            <div class="d-flex justify-content-end">
                                <button data-bs-toggle="modal" data-bs-target="#editModal" class="mt-0 btn btn-sm btn-warning float-right font-weight-bold mb-2">EDIT</button>
                            </div>
                        }
                        @*Modals*@

                        <div class="modal" id="editModal">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h4 class="modal-title">Editing Comment...</h4>
                                    </div>

                                    <!--Modal Body-->
                                    <div class="modal-body">
                                        <form asp-action="Edit" asp-controller="Comments">
                                            @Html.Hidden("Id", comment.Id)

                                            <div class="form-group">
                                                <textarea name="Body" class="form-control" required>@comment.Body</textarea>
                                            </div>

                                            <button class="mt-2 btn btn-sm btn-success border-success font-weight-bold" type="submit">SUBMIT</button>

                                        </form>
                                    </div>
                                    <!-- Modal Footer -->
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-sm btn-dark font-weight-bold" data-bs-dismiss="modal">CLOSE</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        n++;

                        if (n < Model.Comments.Count())
                        {
                            <hr class="my-0" />
                        }

                    }
                }
            </div>
        </div>
</section>


